{
  "name": "module-foderation-1",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "commit": "git-cz",
    "dev": "pnpm --parallel --filter \"mf_project_*\" dev",
    "dev:mf2": "pnpm --filter mf_project_2 dev",
    "dev:mf3": "pnpm --filter mf_project_3 dev",
    "build": "pnpm --parallel --filter \"mf_project_*\" build",
    "build:mf2": "pnpm --filter mf_project_2 build",
    "build:mf3": "pnpm --filter mf_project_3 build",
    "preview": "pnpm --parallel --filter \"mf_project_*\" preview",
    "deploy": "pnpm --filter mf_project_2 deploy && pnpm --filter mf_project_3 deploy",
    "clean": "pnpm --parallel --filter \"mf_project_*\" exec rm -rf dist node_modules/.cache @mf-types",
    "types": "pnpm --parallel --filter \"mf_project_*\" types"
  },
  "keywords": [],
  "author": "wy2010344",
  "license": "ISC",
  "packageManager": "pnpm@10.18.2",
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/cli": "20.1.0",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "wrangler": "^3.78.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
